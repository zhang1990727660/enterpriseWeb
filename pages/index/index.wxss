page{
  background:#eee;
}
.container{
  width:100%;
  height:100%;
}
.nav{
  width:100%;
  height:562rpx;
  background:#ddd;
}
.nav swiper{
  width:100%;
  height:100%;
}
.search{
  position:fixed;
  left:0;
  right:0;
  top:0;
  width:100%;
  height:100rpx;
  background:-webkit-linear-gradient(top, rgba(105,195,170, 1), rgba(105,195,170, 0.3));
  display:flex;
  align-items:center;
}
.search-con{
  width:650rpx;
  height:70rpx;
  background-color:#fff;
  border-radius:10rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin:0 auto;
  overflow:hidden;
  box-sizing: border-box;
}
.search-icon{
  width:60rpx;
  height:100%;
  text-align:center;
}
.search-icon image{
  width:35rpx;
  height:35rpx;
  display:inline-block;
  vertical-align: middle;
}
.search-input{
  width:440rpx;
  height:100%;
  font-size:28rpx;
  padding:0 10rpx;
}
.search-btn{
  width:150rpx;
  height:70rpx;
  background:blueviolet;
  color:#fff;
  font-size:28rpx;
  border-radius:0rpx;
  border:none;
}

.type-tab{
  width:100%;
  height:88rpx;
  overflow:hidden;
  background:#fff;
}
.type-tab-scroll{
  white-space:nowrap;
  width:100%;
  height:100%;
}
.type-tab-item{
  display:inline-block;
  width:120rpx;
  text-align:center;
  line-height:84rpx;
  font-size:24rpx;
  margin-right:20rpx;
  /* cursor:pointer; */
}
.type-tab-item.active{
    border-bottom:4rpx solid #e64340;
}

.notic{
  width:100%;
  height:80rpx;
  background:#fff;
  margin-top:10rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.notic-title{
  /* width:140rpx; */
  height:100%;
  font-size:26rpx;
  padding:0 20rpx;
  color:#999;
  line-height:80rpx;
}
.notic-detail{
  flex:1;
  height:100%;
  font-size:26rpx;
  align-items: center;
  color:#e64340;
  line-height:80rpx;
}
.goods-container{
  width:100%;
  padding:0 24rpx;
  margin-top:20rpx;
  display:flex;
  justify-content:space-between;
  flex-wrap: wrap;
  box-sizing:border-box;
}
.goods-item{
  width:339rpx;
  height:472rpx;
  background:#fff;
  margin-bottom:24rpx;
}
.goods-img{
  width:100%;
  height:339rpx;
}
.goods-img image{
  width:100%;
  height:100%;
}
.goods-intro{
  font-size:24rpx;
  padding:0 24rpx;
  padding-top:24rpx;
}
.goods-name{
  font-size:28rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.goods-price{
  color:#e64340;
  padding-top:24rpx;
}











