page{
  background:#eee;
  min-height:100%;
}
.swiper{
  width:100%;
  height:748rpx;
  background:#DDD;
}
.goods-info{
  padding:35rpx 0 35rpx 20rpx;
  margin-bottom:28rpx;
  padding-right:60rpx;
  background:#fff;
  position:relative;
}
.goods-name{
  font-size:32rpx;
}
.goods-share{
  font-size:24rpx;
  color:#e64340;
  padding:20rpx 0;
}
.goods-share-img{
  position:absolute;
  right:20rpx;
  top:20rpx;
  text-align:center;
}
.goods-share-img image{
  width:61rpx;
  height:64rpx;
}
.goods-share-title{
  display:block;
  font-size:24rpx;
  line-height:20rpx;
}
.goods-detail{
  width:100%;
  display:flex;
  font-size:24rpx;
  color:#999;
}
.goods-price{
  color:#e64340;
  font-size:28rpx;
  font-weight:bold;
  flex:1
}
.goods-buy-num{
  flex:1;
}
.goods-appraise-num{
  flex:1;
}
.goods-intro{
  width:100%;
  background:#fff;
}
.goods-intro-title{
  width:100%;
  height:30rpx;
  font-size:30rpx;
  color:#000;
  padding:32rpx;
}
.foot{
  display:flex;
  position:fixed;
  bottom:0;
  
  width:100%;
  height:90rpx;
  line-height:90rpx;
  background:#fff;
  box-shadow: 0 -4rpx 4rpx rgba(0,0,0,0.2);
}
.foot-item{
  flex:1;
  font-size:34rpx;
  text-align: center;
}
.custom-icon{
  width:80%;
}

.custom-name,
.cart-name{
  display:block;
}

.add-to-cart{
  background:#ff5b44;
  color:#fff;
}
.buy-now{
  background:#f92d36;
  color:#fff;
}
.other{
  display:flex;
}
.other-item{
  flex:1;
  text-align:center;
  position:relative;
}
.other-item image{
  width:40rpx;
  height:40rpx;
}
.other-item .name{
  width:100%;
  position:absolute;
  bottom:0;
  font-size:20rpx;
  text-align:center;
  height:40rpx;
  line-height:40rpx;
}
.other-item .cart-name{
  color:#ddd;
}
.other-item .custom-name{
  color:#008400;
}
.cart-num{
 position:absolute;
 top:10rpx;
 font-size:22rpx;
 color:#ddd;
 display:inline;
 right:15rpx;
 height:20rpx;
 line-height:20rpx;
 text-align:center;
}
.air-layer{
  width:100%;
  height:90rpx;
}

.comment{
  background:#fff;
  margin-top:28rpx;
  padding:0 32rpx;
}
.comment-title{
  width:100%;
  height:30rpx;
  font-size:30rpx;
  color:#000;
  padding:32rpx;
  border-bottom:1px solid #eee;
}
.comment-item{
  display:flex;
  align-items:stretch;
  padding:20rpx 0;
  border-bottom:1px solid #eee;
}
.comment-img{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  overflow:hidden;
}
.comment-img image{
  width:100%;
  height:100%;
}
.comment-detail{
  flex:1;
  box-sizing:border-box;
  padding-left:10rpx;
}
.comment-detail-con{
  font-size:28rpx;
  column-count:3;
}
.comment-date{
  font-size:10px;
  color:#b0b0b0;
  padding-top:10rpx;
}


